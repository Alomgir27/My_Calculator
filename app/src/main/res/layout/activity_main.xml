<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <TextView
                android:id="@+id/btnAc"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_ac"
                android:padding="10dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/btn_divide"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_divide"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/btn_start_bracket"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_start_bracket"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/btn_end_bracket"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_end_bracket"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:id="@+id/btn_7"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_7"
                android:padding="10dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/btn_8"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_8"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/btn_9"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_9"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/btn_multiplication"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_multiplication"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:id="@+id/btn_4"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_4"
                android:padding="10dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/btn_5"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_5"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/btn_6"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_6"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/btn_plus"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_plus"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageView
                android:id="@+id/btn_1"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:background="@drawable/btn_1"
                android:padding="10dp"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/btn_2"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_2"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/btn_3"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_3"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/btn_minus"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_minus"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btn"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_0"
                android:padding="10dp"
                android:visibility="invisible" />
            <ImageView
                android:id="@+id/btn_0"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_0"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/btn_dot"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_dot"
                android:layout_marginLeft="10dp"/>
            <ImageView
                android:id="@+id/btn_equal"
                android:layout_width="70dp"
                android:layout_marginStart="20dp"
                android:layout_height="70dp"
                android:padding="10dp"
                android:background="@drawable/btn_equal"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/inputtext"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="448dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="50dp"
        android:paddingRight="18dp"
        android:gravity="right"
        android:background="@android:color/background_dark" />

    <TextView
        android:id="@+id/outputtext"
        android:layout_width="match_parent"
        android:layout_height="141dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="50dp"
        android:paddingRight="18dp"
        android:gravity="right"
        android:background="@android:color/background_dark" />


</RelativeLayout>